using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace BasicMath
{
    class Program
    {
        static void Main(string[] args)
        {
            /*Create a program that asks the user to enter an integer. 
             If the integer is less than 10, print the message 
             "This number is too small". If the integer is
             greater than or equal to 10, print
             "This number is big enough". */
            Console.WriteLine("Enter a number: ");
            int num = Convert.ToInt32(Console.ReadLine());

            if (num < 10)
            {
                Console.WriteLine("Ahh...your number's a bit too small.");
            }
            else if (num >= 10)
            {
                Console.WriteLine("Ah, your number's big enough.");
            }
            
            Console.ReadLine();
        }
    }
    }
 
